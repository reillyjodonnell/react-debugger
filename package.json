{
  "name": "@react-debugger/core",
  "version": "0.0.11",
  "description": "A Chrome DevTools Protocol-based debugger for React applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "react-debugger-core": "bin/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.tsx --outdir dist --target browser && bun build src/cli.ts --outdir dist --target node && bun build src/debugger-server.ts --outdir dist --target bun && bun build src/debugger-widget.tsx --outdir dist --target browser",
    "dev": "bun --watch src/index.tsx",
    "chrome": "/Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --remote-debugging-port=9222 --user-data-dir=/tmp/chrome-debug http://localhost:5173",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "react",
    "debugger",
    "chrome",
    "devtools",
    "cdp",
    "overlay"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sourcemap-codec": "^1.4.8"
  }
}
